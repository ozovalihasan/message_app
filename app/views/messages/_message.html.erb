<div id="<%= dom_id message %>">
  <p>
    <strong>Body:</strong>
    <%= message.body %>
  </p>

  <%= button_to "Edit this message", edit_message_path(message), method: :post %>
  <%= link_to "Show this message", message %>
  <%= button_to "Destroy this message", message_path(message), method: :delete %>

</div>
